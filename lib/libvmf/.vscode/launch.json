    "version": "0.2.0",
    "configurations": [
        {
            "name": "(debug) Launch",
            "type": "cppdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,

            "windows": {
                "miDebuggerPath": "D:/TDM-GCC-64/bin/gdb.exe"
